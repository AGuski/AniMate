{
  "manifest_version": 2,

  "name": "AniMAte",
  "description": "This app is pretty awesome.",
  "version": "0.0.1",
  "minimum_chrome_version": "10.0",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "syncFileSystem",
    "webview",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
    "contextMenus"
  ],
  "icons": { "16": "assets/icon.png" },

  "webview":{
    "partitions": [
      {
        "name": "contentView",
        "accessible_resources": ["*.html"]
      }
    ]

  }
}